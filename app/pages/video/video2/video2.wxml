	<view class="flex flex-wrap szkt-col-24 flex-direction-column flex1-clz">
		<view class="flex szkt-col-5 justify-between flex-wrap tag-clz">
		</view>
		<view class="flex szkt-col-5 justify-between flex-wrap tag2-clz">
