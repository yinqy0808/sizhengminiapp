<view class="container">
	
	<szkt-navbar bgColor="red" isBack="{{true}}">
		<view slot="backText"> 返回 </view>
		<view slot="content"> 详情 </view>
	</szkt-navbar>
  <view style="height: 80rpx;"></view>
	<view class="szkt-form-item szkt-col-24 input-clz">
		<view class="title width-auto"> 习近平的文化情怀 | “你们一针一线绣出来，何其精彩！” </view>
		<view class="input">
			<input class="flex1" name="input" comfirm-type="done" type="text" value="{{input}}" data-key="input" bindchange="changeValue" placeholder="" />
		</view>
	</view>
	<rich-text nodes="{{text1}}" class="szkt-col-24 text1-clz text-gray"></rich-text>
	<rich-text nodes="{{text}}" class="szkt-col-24 text-clz"></rich-text>
	<view class="szkt-form-item szkt-col-11">
		<view class="title width-auto"> 阅读 </view>
		<view class="input">
			<input class="flex1" name="input1" comfirm-type="done" type="text" value="{{input1}}" data-key="input1" bindchange="changeValue" placeholder="1,111,730" />
		</view>
	</view>
	<view class="szkt-form-item szkt-col-11">
		<view class="title width-auto"> 点赞 </view>
		<view class="input">
			<text class="szkt-icon-appreciate" style="color: #a5ada9"></text>
			<input class="flex1" name="input2" comfirm-type="done" type="text" value="{{input2}}" data-key="input2" bindchange="changeValue" placeholder="   16,580" />
		</view>
	</view>
	<view class="szkt-form-item szkt-col-24 input3-clz">
		<view class="title text-red width-auto"> 评论 </view>
		<view class="input">
			<input class="flex1" name="input3" comfirm-type="done" type="text" value="{{input3}}" data-key="input3" bindchange="changeValue" placeholder="" />
			<text class="szkt-icon-writefill" style="color: #151716"></text>
		</view>
	</view>
	<view class="clearfix"></view>
</view>
